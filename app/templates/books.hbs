{{!-- app/templates/books.hbs --}}

<ul>
  {{#each model as |book|}}
  <a href="#" {{action 'openCheckoutModal' book}}>
    <li>
      <strong>{{book.title}}</strong><br><br>
      <em>by</em>
      {{link-to book.author.name 'author' book.author.id class="author" bubbles=false }}
    </li>
  </a>
  {{/each}}
</ul>